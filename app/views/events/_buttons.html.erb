<% if current_user %>

  <% if current_user.rsvps.where(event_id: event.id).count > 0 %>
    RSVP
    <%= link_to '', rsvp_path(@rsvps.where(event_id: event.id).first.id), method: :delete, class: "btn btn-success btn-custom" %>
  <% else %>
    RSVP
    <%= link_to '', rsvps_path(:event_id => event.id), method: :post, class: "btn btn-secondary btn-custom" %>
  <% end %>

  <% if current_user.favorites.where(event_id: event.id).count > 0 %>
    Favorite
    <%= link_to '', favorite_path(@favorites.where(event_id: event.id).first.id), method: :delete, class: "btn btn-success btn-custom" %>
  <% else %>
    Favorite
    <%= link_to '', favorites_path(:event_id => event.id), method: :post, class: "btn btn-secondary btn-custom" %>
  <% end %>

<% else %>
  <%= button_to "RSVP", new_user_session_path %>
  <%= button_to "Favorite", new_user_session_path %>
<% end %>