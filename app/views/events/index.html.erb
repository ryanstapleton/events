<h1>All Events</h1>

 <% @events.each do |event| %>
  <div class="album text-muted">
    <div class="container">
      <div class="card">
        <div class="row">
          <div class="col-md-12">
            <h3 class="event-title"><%= link_to event.title.titleize, event %></h3>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="column-left">
              <%= image_tag "#{event.thumb_image}", width: 300, height: 300 %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="column-right">
              <p><%= event.body %></p>
              <p><%= "Event took place at #{event.location}." %></p>

              <%= button_to "RSVP", rsvp_path(rsvp), method: :delete %>

            </div>
          </div>
          <hr>
        </div>
      </div>
    </div>
  </div>
<% end %>